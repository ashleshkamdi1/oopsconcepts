#include <iostream>
#include <iomanip>
 
using namespace std;
 
class Time
{
    private:
        int seconds;
        int hh,mm,ss;
    public:
        void time(void);
        void conversion(void);
        void showtime(void);
};
 
void Time::time(void)
{
    cout << "Enter time:"<<"\n";
    cout << "Hours   ";    cin >> hh;
    cout << "Minutes ";    cin >> mm;
    cout << "Seconds ";    cin >> ss;
}
 
void Time::conversion(void)
{
    seconds = hh*3600 + mm*60 + ss;
}
 
void Time::showtime(void)
{
    cout << "The time is = " << setw(2) << setfill('0') << hh << ":"<< setw(2) << setfill('0') << mm << ":"<< setw(2) << setfill('0') << ss << endl;
    cout << "Time in total seconds: " << seconds;
}
 
int main()
{
    Time T;                                        //object 
     
    T.time();
    T.conversion();
    T.showtime();
     
    return 0;
}
